    <content><![CDATA[
#include <iostream>
#include <fstream>
#include <string>

int main( int argc, char** argv ) {
    std::string line;
    std::ifstream resource( argv[1] );

    if ( resource ) {
        while ( getline(resource, line) ) {
            std::cout << line << "\n";
        }
    }

    resource.close();
    return 0;
}
]]></content>
